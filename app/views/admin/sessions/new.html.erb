<div class="container">
  <div class="row">
    <div class="col-4">
      <h2 class="bg-light p-3 m-4">管理者ログイン</h2>
    </div>
  </div>
</div>

<div class="container" >
  <div class="row">
    <div class="col-12">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row mb-3">
          <%= f.label :email,"メールアドレス", class: "m-4" %>
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control m-4" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :password, "パスワード", class: "m-4" %>
          <div class="col-sm-10">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control m-4 me-2" %>
          </div>
        </div>

        <div class="d-grid gap-2 col-6 mx-auto">
          <%= f.submit "ログイン", class: "btn btn-primary p-2" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>