<h2>商品一覧</h2>
<p><%= link_to "新規登録", new_admin_item_path, class: "btn btn-success" %></p>
<table class="table">
  <thead class="table-secondary">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td>
        <% if item.is_active %>
          <div class="text-success">販売中</div>
        <% else %>
          <dev class="text-secondary">販売停止中</div>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>