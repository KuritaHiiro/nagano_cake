<h2>商品一覧</h2>

<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-log-8">
      <% @items.each do |item| %>
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.get_image, size: "320x180" %>
        <% end %>
        <p><%= item.name %></p>
        <p>¥<%= item.price * 1.1.floor %></p>
        <% end %>
    </div>
  </div>
</div>


