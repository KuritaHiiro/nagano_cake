<h2>マイページ</h2>

<table>
  <tr>
    <th>登録情報</th>
    <td><%= link_to "編集する", edit_customers_path(current_customer) %></td>
  </tr>
</table>

<table>
  <tr>
    <th>氏名</th>
    <td><%= current_customer.last_name %><%= current_customer.first_name %></td>
  </tr>
  <tr>
    <th>カナ</th>
    <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>

<table>
  <tr>
    <th>配送先一覧</th>
    <td><%= link_to "一覧を見る", addresses_path(@addresses) %></td>
  </tr>
</table>

<table>
  <tr>
    <th>注文履歴</th>
