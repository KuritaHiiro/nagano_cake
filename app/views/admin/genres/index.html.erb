<!--ジャンルの新規登録-->
<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h2 class="d-inline-flex p-2 bd-light">ジャンル一覧・追加</h2>
    </div>
  </div>

  <div class="row align-items-start">
    <div class="col-6">
      <table>
        <thead>
        <%= form_with model: @genre, url: "/admin/genres", method: :post do |f| %>
          <tr>
            <th>ジャンル名</th>
            <td></td>
            <th><%= f.text_field :name, placeholder: "ジャンル名", class: "form-control m-5" %></th>
            <td></td>
            <th><%= f.submit "新規投稿", class: "btn btn-success m-3" %></th>
          </tr>
        <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>

<!--ジャンル一覧、編集ページに進むボタン-->
<div class="container">
  <div class="row align-items-start">
    <div class="col-5">
      <table class="table">
        <thead class="table-secondary">
          <tr>
            <td></td>
            <td>ジャンル</td>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
     </table>
    </div>
  </div>
</div>
