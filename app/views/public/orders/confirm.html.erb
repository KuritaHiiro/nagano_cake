<div class="container">
  <div class="row">
    <div class="col-8">
      <h2 class="bg-light m-3">注文情報確認</h2>
      <table>
        <thead class="table table-striped">
          <tr>
            <td>商品名</td>
            <td>単価(税込)</td>
            <td>数量</td>
            <td>小計</td>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <%= @sum = 0 %>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= (cart_item.item.price * 1.1).floor %></td>
            <td>
              <%= cart_item.amount %>
            </td>
            <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
            <%= @sum += (cart_item.item.price * 1.1).floor * cart_item.amount %>
          </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_methods_i18n %></td>
          </tr>
          <tr>
            <td>お届け先</td>
            <td></td>
          </tr>
        </tfoot>
      </table>
    </div>
    <div class="col-4">
      <table>
        <tr>
          <td>送料</td>
          <td></td>
        </tr>
        <tr>
          <td>商品合計</td>
          <!--<td>%= @sum += (cart_item.item.price * 1.1).floor * @cart_item.amount %></td>-->
        </tr>
          <td>請求合計</td>
          <td></td>
        </tr>
      </table>
    </div>
  </div>
</div>
