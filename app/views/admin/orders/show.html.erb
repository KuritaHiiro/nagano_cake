<h2>注文履歴詳細</h2>

<table>
    <tr>
      <th>購入者</th>
      <th><%= link_to @order.customer.first_name, admin_customer_path(@customer.id) %></th>
    </tr>
    <tr>
      <th>注文日</th>
      <th><%= @order.created_at %></th>
    </tr>
    <tr>
      <th>配送先</th>
      <th>〒<%= @order.postal_code %><%= @order.address %><br>
          <%= @order.name %>
      </th>
    </tr>
    <tr>
      <th>支払方法</th>
      <th><%= @order.payment_method_i18n %></th>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <th><%= @order.status_i18n %></th>
    </tr>
</table>
<div class="container">
  <div class="row">
    <div class="col-6">
      <table class="table">
        <thead class="table-secondary">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</td>
            <td>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= (order_detail.item.price * 1.1).floor %></td>
            <td><%= order_detail.amount %></td>
            <td><%= ((order_detail.item.price * 1.1).floor * order_detail.amount) %></td>
            <td><%= order_detail.production_status_i18n %></td>
            <% @sum += ((order_detail.item.price * 1.1).floor * order_detail.amount) %>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-4">
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= @sum %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @sum + @order.postage %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
