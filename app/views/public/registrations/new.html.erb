<div class="container">
  <div class="row">
    <div class="col">
      <h2>新規会員登録</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-3">
      <p>名前</p>
    </div>
    <div class="col-4">
      <p>(姓)<%= f.text_field :last_name, class:"form-control" %></p>
    </div>
    <div class="col-4">
      <p>(名)<%= f.text_field :first_name, class:"form-control" %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>フリガナ</p>
    </div>
    <div class="col-4">
      <p>(セイ)<%= f.text_field :last_name_kana, class:"form-control" %></p>
    </div>
    <div class="col-4">
      <p>(メイ)<%= f.text_field :first_name_kana, class:"form-control" %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>メールアドレス</p>
    </div>
    <div class="col-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>郵便番号(ハイフンなし)</p>
    </div>
    <div class="col-4">
      <%= f.text_field :postal_code, class:"form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>住所</p>
    </div>
    <div class="col-8">
      <%= f.text_field :address, class:"form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>電話番号(ハイフンなし)</p>
    </div>
    <div class="col-4">
      <%= f.telephone_field :telephone_number, class:"form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>
        <% if @minimum_password_length %>
        <em>パスワード(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </p>
    </div>
    <div class="col-4">
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>パスワード(確認用)</p>
    </div>
    <div class="col-4">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-3"></div>
    <div class="d-grid gap-2 col-6">
      <%= f.submit "新規登録", class: "btn btn-success btn-lg px-5" %>
    </div>
  </div>
  <% end %>
</div>

<div class="container">
  <div class="row mt-5">
    <div class="col-4">
      <h2 class="bg-light">既に登録済みの方</h2>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= link_to "こちら", new_customer_session_path %>からログインしてください。
    </div>
  </div>
</div>
