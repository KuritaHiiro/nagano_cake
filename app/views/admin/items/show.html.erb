<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="bg-light m-4">商品詳細</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <%= image_tag @item.get_image, size: "320x180", class: "m-5" %>
    </div>

    <div class="col-6 m-5">
      <table>
        <thead class="mt-5">
          <tr class="m-2">
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr class="m-2">
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr class="m-2">
            <td>ジャンル</td>
            <td><%= @genre.name %></td>
          </tr>
          <tr class="m-2">
            <td>
              税込価格<br/>
              (税抜価格)
            </td>
            <td><%= (@item.price * 1.1).floor %>(<%= @item.price %>)円</td>
          </tr>
          <tr class="m-2">
            <td>販売ステータス</td>
            <td>
              <% if @item.is_active %>
                <div class="text-success">販売中</div>
              <% else %>
                <div class="text-secondary">販売停止中</div>
              <% end %>
            </td>
          </tr>
        </thead>
      </table>
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
    </div>
  </div>
</div>
