<div class="container">
  <div class="row">
    <div class="col-6">
      <h2>ショッピングカート</h2>
      <table>
        <thead class="table table-striped">
          <tr>
            <td>商品名</td>
            <td>単価(税込)</td>
            <td>数量</td>
            <td>小計</td>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= @cart_item.name %></td>
            <td><%= (@cart_item.price * 1.1).floor %></td>
            <td><%= @cart_item.amount %></td>
            <td><%= (@cart_item.price * 1.1).floor * cart_item.amount %></td>
          </tr>
          <tr>
            <th>合計金額</th>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>