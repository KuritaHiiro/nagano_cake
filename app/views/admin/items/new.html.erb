<h2>商品新規登録</h2>

<div class="container">
  <div class="row">
    <div class="col-12">
      <table>
        <thead>
        <%= form_with model: @item, url: "/admin/items", method: :post do |f| %>
          <tr>
            <th>商品画像</th>
            <th><%= f.file_field :image, accept: "image/*" %></th>
          </tr>
          <tr>
            <th>商品名</th>
            <th><%= f.text_field :name, placeholder: "商品名" %></th>
          </tr>
          <tr>
            <th>商品説明</th>
            <th><%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %></th>
          </tr>
          <tr>
            <th>ジャンル</th>
            <th><%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "--選択してください--") %></th>
          </tr>
          <tr>
            <th>税抜価格</th>
            <th><%= f.text_field :price, placeholder: "1000" %></th>
            <th>円</th>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td><label><%= f.radio_button :is_active, true %>販売中</label></td>
            <td><label><%= f.radio_button :is_active, false %>販売停止中</label></td>
          </tr>
          <tr>
            <th><%= f.submit "新規登録" ,class: "btn btn-success" %></th>
          </tr>
        <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>

