<h2>ジャンル一覧・追加</h2>

<!--ジャンルの新規登録-->
<table>
  <thead>
    <%= form_with model: @genre, url: "/admin/genres", method: :post do |f| %>
    <tr>
      <th><strong>ジャンル名</strong></th>
      <th><%= f.text_field :name %></th>
      <th><%= f.submit "新規投稿" %></th>
    </tr>
    <% end %>
  </thead>
</table>

<!--ジャンル一覧、編集ページに進むボタン-->
<table>
  <thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集", edit_admin_genre_path(genre.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

