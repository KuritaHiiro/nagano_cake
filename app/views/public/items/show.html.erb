<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-4">
      <%= image_tag @item.get_image, size: "320x180" %>
    </div>
    <div class="col-lg-4">
      <table>
        <tr>
          <th><h2><%= @item.name %></h2></th>
        </tr>
        <tr>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>¥<%= @item.price * 1.1.floor %>(税込)</td>
          <td>
            <% if @item.is_active %>
              <div class="text-success">販売中</div>
            <% else %>
              <div class="text-secondary">販売停止中</div>
            <% end %>
            </td>
        </tr>
        <tr>
          <td>数量を選択して下さい。</td>
        </tr>
        <%= form_with model: @cart_items do |f| %>
        <tr>
          <td><%= f.hidden_field :item_id, :value
          <td><%= f.select :amount, *[1..10] %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>