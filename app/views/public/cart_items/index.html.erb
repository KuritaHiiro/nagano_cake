<div class="container">
  <div class="row">
    <div class="col-8">
      <h2>ショッピングカート</h2>
      <%= link_to "カートを空にする", empty_path, method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
      <table>
        <thead class="table table-striped">
          <tr>
            <td>商品名</td>
            <td>単価(税込)</td>
            <td>数量</td>
            <td>小計</td>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <%= @sum = 0 %>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= (cart_item.item.price * 1.1).floor %></td>
            <td>
              <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
                <%= f.select :amount, *[1..10] %>
                <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </td>
            <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
            <%= @sum += (cart_item.item.price * 1.1).floor * cart_item.amount %>
            <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td><%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %></td>
            <td>合計金額</td>
            <td><%= @sum %></td>
          </tr>
        </tfoot>
      </table>
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    </div>
  </div>
</div>