<div class="container">
  <div class="row">
    <div class="col-4">
      <h2 class="bg-light p-3 m-4">管理者ログイン</h2>
    </div>
  </div>
</div>

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-3">
      <%= f.label :email,"メールアドレス", class: "m-4" %>
    </div>
    <div class="col-8">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control m-4" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <%= f.label :password, "パスワード", class: "m-4" %>
    </div>
    <div class="col-8">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control m-4 me-2" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3"></div>
    <div class="col-4">
      <%= f.submit "ログイン", class: "btn btn-primary p-2" %>
    </div>
  </div>
  <% end %>

  <%= render "admin/shared/links" %>
</div>
