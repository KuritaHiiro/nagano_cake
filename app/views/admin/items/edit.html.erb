<div class="container">
  <div class="row m-5">
    <div class="col">
      <h2>商品編集</h2>
    </div>
  </div>

  <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
  <div class="row">
    <div class="col-3">
      <p>商品画像</p>
    </div>
    <div class="col-4">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>商品名</p>
    </div>
    <div class="col-4">
      <%= f.text_field :name, class: "from-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>商品説明</p>
    </div>
    <div class="col-4">
      <%= f.text_area :introduction, class: "from-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>ジャンル</p>
    </div>
    <div class="col-4">
      <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "--選択してください--") %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>税抜価格</p>
    </div>
    <div class="col-4">
      <%= f.text_field :price, class: "from-control" %>
    </div>
    <div class="col-2">
      <p>円</p>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>販売ステータス</p>
    </div>
    <div class="col-2">
      <label><%= f.radio_button :is_active, true %>販売中</label>
    </div>
    <div class="col-2">
      <label><%= f.radio_button :is_active, false %>販売停止中</label>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-3"></div>
    <div class="col-3">
      <p><%= f.submit "変更を保存", class: "btn btn-success" %></p>
    </div>
  </div>

  <% end %>
</div>
