<div class="container">
  <div class="row m-5">
    <div class="col">
      <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>会員ID</p>
    </div>
    <div class="col-4">
      <%= @customer.id %>
    </div>
  </div>

  <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  <div class="row">
    <div class="col-3">
      <p>氏名</p>
    </div>
    <div class="col-4">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
    <div class="col-4">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>フリガナ</p>
    </div>
    <div class="col-4">
      <%= f.text_field :last_name_kana, class: "form-control" %>
    </div>
    <div class="col-4">
      <%= f.text_field :first_name_kana, class: "form-control" %>
    </div>
  </div>

   <div class="row">
    <div class="col-3">
      <p>郵便番号</p>
    </div>
    <div class="col-4">
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>住所</p>
    </div>
    <div class="col-8">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>電話番号</p>
    </div>
    <div class="col-4">
      <%= f.telephone_field :telephone_number, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>メールアドレス</p>
    </div>
    <div class="col-4">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>会員ステータス</p>
    </div>
    <div class="col-2">
      <label><%= f.radio_button :is_active, true %>有効</label>
    </div>
    <div class="col-2">
      <label><%= f.radio_button :is_active, false %>退会</label>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-3"></div>
    <div class="col-6">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
  </div>

  <% end %>
</div>