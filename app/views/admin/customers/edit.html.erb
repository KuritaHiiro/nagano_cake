<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

<table>
  <tr>
    <th>会員ID</th>
    <td><%= @customer.id %></td>
  </tr>
  <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  <tr>
    <th>氏名</th>
    <td><%= f.text_field :last_name %></td>
    <td><%= f.text_field :first_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td><%= f.text_field :last_name_kana %></td>
    <td><%= f.text_field :first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= f.telephone_field :telephone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td><label><%= f.radio_button :is_active, true %>有効</label></td>
    <td><label><%= f.radio_button :is_active, false %>退会</label></td>
  </tr>
  <tr>
    <th><%= f.submit "変更を保存" %></th>
  </tr>
  <% end %>
</table>
