<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <!--nagano_cakeのロゴが入るw-->
          <a class="navbar-brand" href="/">LOGO</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
              <li class="nav-item">
                <%= link_to "商品一覧", admin_items_path, class: 'btn btn-outline-secondary p-2'  %>
              </li>
              <li class="nav-item">
                <%= link_to "会員一覧", admin_customers_path, class: 'btn btn-outline-secondary p-2' %>
              </li>
              <li>
                <%= link_to "注文履歴一覧", admin_path, class: 'btn btn-outline-secondary p-2' %>
              </li>
              <li class="nav-item">
                <%= link_to "ジャンル一覧", admin_genres_path, class: 'btn btn-outline-secondary p-2' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-outline-secondary p-2' %>
              </li>
              <% elsif customer_signed_in? %>
              <li>
                <%= link_to "マイページ", customers_path, class: "btn btn-outline-secondary p-2" %>
              </li>
              <li>
                <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary p-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'btn btn-outline-secondary p-2' %>
              </li>
              <% else %>
              <li class="nav-item">
                <%= link_to "About", about_path, class: 'btn btn-outline-secondary p-2' %>
              </li>
              <li class="nav-item">
                <%= link_to "商品一覧", items_path, class: 'btn btn-outline-secondary p-2' %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-outline-secondary p-2' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_customer_session_path, class: 'btn btn-outline-secondary p-2' %>
              </li>
              <% end %>
            </ul>
          </div>
          </div>
        </div>
      </nav>

    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer class="bg-light text-white pt-5 pb-4">

    </footer>
  </body>
</html>
