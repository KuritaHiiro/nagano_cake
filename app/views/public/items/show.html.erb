<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-4">
      <%= image_tag @item.get_image, size: "320x180" %>
    </div>
    <div class="col-lg-4">
      <table>
        <tr>
          <th><h2><%= @item.name %></h2></th>
        </tr>
        <tr>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td><%= @item.price * 1.08 %>(税込)</td>
        </tr>
      </table>
    </div>
  </div>
</div>