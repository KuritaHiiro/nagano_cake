<div class="container">
  <div class="row m-5">
    <div class="col-3">
      <h2 class="bg-light">配送先編集</h2>
    </div>
  </div>

  <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
  <div class="row">
    <div class="col-3">
      <p>郵便番号(ハイフンなし)</p>
    </div>
    <div class="col-3">
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>住所</p>
    </div>
    <div class="col-6">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>宛名</p>
    </div>
    <div class="col-3">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-4">
      <%= f.submit "変更内容を保存", class: "btn btn-success mx-5" %>
    </div>
  </div>
  <% end %>
</div>