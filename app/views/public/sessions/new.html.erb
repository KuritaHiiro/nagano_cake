<div class="container">
  <div class="row mt-5">
    <div class="col-2">
      <h2 class="bg-light">ログイン</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-3">
      <p class="bg-light">会員の方はこちらからログイン</p>
    </div>
  </div>
</div>

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-3">
      <p>メールアドレス</p>
    </div>
    <div class="col-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-3">
      <p>パスワード</p>
    </div>
    <div class="col-4">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-3"></div>
    <div class="d-grid gap-2 col-3">
      <%= f.submit "ログイン", class: "btn btn-primary btn-lg px-5" %>
    </div>
  </div>
  <% end %>
</div>

<div class="container">
  <div class="row mt-5">
    <div class="col-4">
      <p class="bg-light">会員登録がお済みでない方</p>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= link_to "こちら", new_customer_registration_path %>から新規登録を行なってください。
    </div>
  </div>
</div>

